<%- include("header"); -%>
    <div class="box" id="heading">
      <h1> <%= listTitle %> </h1>
    </div>

    <div class="box">
      <% newListItems.forEach(function(item, index) { %>
        <form class="" action="/delete" method="post">
          <div class="item" name="<%= index %>">
            <input id="<%= index %>" type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
            <p onclick="checked(<%= index %>)"> <%= item.name %> </p>
              <!-- <form class="item" action="deleteItem" method="post"> -->
                <!-- <button onclick="deleteItem(<%= index %>)" class="delete" type="submit" name="itemsIndex" value="<%= index %>">-</button> -->
              <!-- </form> -->
          </div>
          <input type="hidden" name="list" value="<%= listTitle %>">
        </form>
      <% }); %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="type another task" autocomplete="off" autofocus>
        <button class="add" type="submit" name="list" value="<%= listTitle %>">+</button>

      </form>
    </div>
<%- include("footer"); -%>
